swapon /swap/swapfile

echo '/swap/swapfile swap swap defaults 0 0' | tee -a /etc/fstab

/sbin/grubby --update-kernel=ALL --args='cgroup_enable=memory cgroup.memory=nokmem swapaccount=1'

